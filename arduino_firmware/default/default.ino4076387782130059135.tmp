#include <SwitchControlLibrary.h>

enum {
  RIGHT = 0,
  LEFT,
  UP,
  DOWN,
  A,
  B,
  X,
  Y,
  R,
  L,
  ZR,
  ZL,
  RSTICK,
  LSTICK,
  RCLICK,
  LCLICK,
  HOME,
  CAPTURE,
  PLUS,
  MINUS
};

enum {
  PUSH = 0,
  RELEASE
};

void setup() {
  //connect to switch
  SwitchControlLibrary().PressButtonZL();
  SwitchControlLibrary().PressButtonZR();
  delay(500);
  SwitchControlLibrary().ReleaseButtonZL();
  SwitchControlLibrary().ReleaseButtonZR();
  delay(500);
  SwitchControlLibrary().PressButtonZL();
  SwitchControlLibrary().PressButtonZR();
  delay(500);
  SwitchControlLibrary().ReleaseButtonZL();
  SwitchControlLibrary().ReleaseButtonZR();
  delay(500);
  
  Serial1.begin(115200);
  //Serial.begin(115200);
}

void loop() {
  // put your main code here, to run repeatedly:
  if (Serial1.available() > 0) {
    int button_type = Serial1.read();
    while (Serial1.available() <= 0) {}
    int button_command = Serial1.read();

    switch (button_type) {
      case RIGHT:
        if (button_command == PUSH) {
          SwitchControlLibrary().MoveHat(2);
        } else if (button_command == RELEASE) {
          SwitchControlLibrary().MoveHat(8);
        }
        break;
      case LEFT:
        if (button_command == PUSH) {
          SwitchControlLibrary().MoveHat(6);
        } else if (button_command == RELEASE) {
          SwitchControlLibrary().MoveHat(8);
        }
        break;
      case UP:
        if (button_command == PUSH) {
          SwitchControlLibrary().MoveHat(0);
        } else if (button_command == RELEASE) {
          SwitchControlLibrary().MoveHat(8);
        }
        break;
      case ZR:
        if (button_command == PUSH) {
          SwitchControlLibrary().PressButtonZR();
          //Serial.write("press ZR");
        } else if (button_command == RELEASE) {
          SwitchControlLibrary().ReleaseButtonZR();
          //Serial.write("release ZR");
        }
        break;
      case ZL:
        if (button_command == PUSH) {
          SwitchControlLibrary().PressButtonZL();
          //Serial.write("press ZL");
        } else if (button_command == RELEASE) {
          SwitchControlLibrary().ReleaseButtonZL();
          //Serial.write("release ZL");
        }
        break;  
    }
  }
}
